{% extends 'base.twig' %}
{% set body_class = 'tours' %}
{% set description = 'Upcoming and past tour dates and locations' %}

{% block content %}
  <div class="container-narrow content">
    {% include 'partials/page-nav.twig' with { 'active': 'tours' } %}

    {% for tour in posts %}
      <div class="tour">
        <h2 class="tour-year">{{ tour.year|date('Y') }}</h2>
        {% for show in tour.meta('shows') %}
          <div class="show">
            <div class="show-time">
              <p class="mb-0">{{ show.date|date('F j, Y') }}</p>
              <p>{{ show.time }}</p>
            </div>
            <div class="show-details">
              <p class="mb-0">{{ show.venue_name }}</p>
              
              {% if show.venue_address is not empty %}
                <p>{{ show.venue_address }}</p>
              {% endif %}

              {% if show.description is not empty %}
                <p>{{ show.description }}</p>
              {% endif %}

              {% if show.info_link is not empty %}
                {% set linktext = show.info_link_label ? show.info_link_label : show.info_link %}
                <p><a href="{{ show.info_link }}">{{ linktext }}</a></p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
{% endblock %}